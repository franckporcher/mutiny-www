IS_MODULE[root]=1
IS_MODULE[mutiny]=1
IS_MODULE[wordpress]=1
IS_MODULE[store]=1
IS_MODULE[cgm]=1
IS_MODULE[perltrace]=1
IS_MODULE[perlerror]=1
IS_MODULE[perlmuffinmc]=1

unset MODULES

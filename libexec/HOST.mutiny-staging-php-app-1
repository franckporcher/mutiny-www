#------------------------------------
# APPLICATION 
#------------------------------------
WWW_INSTALLDIR=/srv/www/mutiny/current

#------------------------------------
# Web Server
#------------------------------------
AWS_APPNAME='mutiny'
WWW_CONF=/etc/apache2
APACHE_RUN_USER="$(getconf "${WWW_CONF}/envvars" 'APACHE_RUN_USER=([\w_-]+)')"
APACHE_RUN_GROUP="$(getconf "${WWW_CONF}/envvars" 'APACHE_RUN_GROUP=([\w_-]+)')"
APACHE_LOG_DIR="$(getconf "${WWW_CONF}/envvars" 'APACHE_LOG_DIR=([\w_-]+)')"
VHOST_SERVER_NAME='mutinytahiti.com'
VHOST_SERVER_NAME_SSL='mutinytahiti.com'
VHOST_SERVER_ALIAS="dev.${VHOST_SERVER_NAME}"
VHOST_SERVER_ADMIN="webmaster@${VHOST_SERVER_NAME}"
VHOST_DOCUMENT_ROOT="${WWW_INSTALLDIR}"
VHOST_ERRORLOG="${APACHE_LOG_DIR}/${VHOST_SERVER_NAME}.error.log"
VHOST_CUSTOMLOG_1="${APACHE_LOG_DIR}/${VHOST_SERVER_NAME}.access.log"
VHOST_CUSTOMLOG_MODE_1=combined
VHOST_CUSTOMLOG_2="${APACHE_LOG_DIR}/${VHOST_SERVER_NAME}.ganglia.log"
VHOST_CUSTOMLOG_MODE_2=ganglia
VHOST_INCLUDE_OPTIONAL_1="${WWW_CONF}/sites-available/${AWS_APPNAME}.conf.d/rewrite*"
VHOST_INCLUDE_OPTIONAL_2="${WWW_CONF}/sites-available/${AWS_APPNAME}.conf.d/local*"

export AWS_APPNAME WWW_CONF APACHE_RUN_USER APACHE_RUN_GROUP APACHE_LOG_DIR VHOST_SERVER_NAME VHOST_SERVER_NAME_SSL VHOST_SERVER_ALIAS VHOST_SERVER_ADMIN VHOST_DOCUMENT_ROOT VHOST_ERRORLOG VHOST_CUSTOMLOG_1 VHOST_CUSTOMLOG_MODE_1 VHOST_CUSTOMLOG_2 VHOST_CUSTOMLOG_MODE_2 VHOST_INCLUDE_OPTIONAL_1 VHOST_INCLUDE_OPTIONAL_2

#------------------------------------
# DATA STORE 
#------------------------------------
DEFAULT_DB_SERVER='mutiny-staging-rds.cfwvxsax91fg.us-east-1.rds.amazonaws.com'
eval "DBSERVER=$(grep -m 1 -E 'SetEnv.+DBSERVER' "${WWW_CONF}/sites-enabled/${AWS_APPNAME}.conf" | awk '{print $3}')"
[ -z "${DBSERVER}" ] && DBSERVER="${DEFAULT_DB_SERVER}"

DEFAULT_DB_PORT=3306
eval "DBPORT=$(grep -m 1 -E 'SetEnv.+DBPORT' "${WWW_CONF}/sites-enabled/${AWS_APPNAME}.conf" | awk '{print $3}')"
[ -z "${DBPORT}" ] && DBPORT="${DEFAULT_DB_PORT}"

export DBSERVER DBPORT



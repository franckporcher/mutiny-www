#------------------------------------
# CONFIG FILES
#------------------------------------
unset CONFIG
declare -A CONFIG

# CONFIG[ module-name         ]    => "module-conffile-tag... "
# CONFIG[ module-conffile-tag ]    => "<OP> TEMPLATE_FILE INSTALLDIR"
#
#   OP={install,append,tmpl.install,sed.install,tmpl.append,sed.append}

## OPERATIONAL ##
CONFIG[mutiny]='apache2-conf apache2-envvars apache2-charset apache2-vhost-conf psdb-init-sql-tmpl wpdb-init-sql-tmpl'
CONFIG[store]='store-presta-settings'
CONFIG[wordpress]='wordpress-config'

         CONFIG[apache2-conf]="append       apache2.conf                  ${WWW_CONF}/apache2.conf                          644 root root"
      CONFIG[apache2-envvars]="append       apache2.envvars               ${WWW_CONF}/envvars                               644 root root"
      CONFIG[apache2-charset]="append       apache2.charset.conf          ${WWW_CONF}/conf-available/charset.conf           644 root root"
   CONFIG[apache2-vhost-conf]="tmpl.install apache2.vhost.conf.tmpl       ${WWW_CONF}/sites-available/${AWS_APPNAME}.conf   644 root root"
CONFIG[store-presta-settings]="sed.install  prestashop.settings.php.tmpl  ${WWW_INSTALLDIR}/store/config/settings.inc.php"
     CONFIG[wordpress-config]="sed.install  wordpress.config.php.tmpl     ${WWW_INSTALLDIR}/wordpress/wp-config.php"
   CONFIG[psdb-init-sql-tmpl]="env.install  psdb.init.sql.tmpl            ${LIBDATA}/${SQL_PSDB}.init.sql                   644     - - "
   CONFIG[wpdb-init-sql-tmpl]="env.install  wpdb.init.sql.tmpl            ${LIBDATA}/${SQL_WPDB}.init.sql                   644     - - "
